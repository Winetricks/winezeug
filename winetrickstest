#!/bin/sh
# There's a lot of stuff here that probably doesn't need to be tested, e.g., 
# setting dlls to native, and different windows versions. It doesn't hurt to test
# and may find weird problems. Plus, that way we can test every function.

set -ex

rm -rf $HOME/.winetrickscache $HOME/.cache/winetricks
WINEPREFIX=${WINEPREFIX:-$HOME/.wine}

for verb in \
    7zip \
    adobeair \
    art2kmin \
    atmlib \
    colorprofile \
    comctl32 \
    comctl32.ocx \
    comdlg32.ocx \
    corefonts \
    crypt32 \
    d3dx9 \
    d3dx10 \
    d3dxof \
    dcom98 \
    devenum \
    dinput8 \
    directmusic \
    directplay \
    dotnet11 \
    dotnet20 \
    droid \
    dsound \
    eufonts \
    ffdshow \
    flash \
    fontfix \
    fontsmooth-bgr \
    fontsmooth-disable \
    fontsmooth-gray \
    fontsmooth-rgb \
    forcemono \
    gdiplus \
    gecko \
    gecko-dbg \
    gfw \
    hosts \
    jet40 \
    liberation \
    lucida \
    mdac25 \
    mdac27 \
    mdac28 \
    mfc40 \
    mfc42 \
    mingw \
    mingw-gdb \
    mono26 \
    mozillabuild \
    mshflxgd \
    msi2 \
    msls31 \
    msmask \
    mspaint \
    msscript \
    msxml3 \
    msxml4 \
    msxml6 \
    ogg \
    openwatcom \
    pdh \
    physx \
    quartz \
    quicktime72 \
    riched20 \
    riched30 \
    richtx32 \
    safari \
    secur32 \
    shockwave \
    steam \
    tahoma \
    urlmon \
    usp10 \
    utorrent \
    vb2run \
    vb3run \
    vb4run \
    vb5run \
    vb6run \
    vcrun6 \
    vcrun6sp6 \
    vcrun2003 \
    vcrun2005 \
    vcrun2008 \
    vcrun2010 \
    vjrun20 \
    wenquanyi \
    windowscodecs \
    winhttp \
    wininet \
    wme9 \
    wmp9 \
    wmp10 \
    wsh56 \
    wsh56js \
    wsh56vb \
    xact \
    xvid \
    ahk \
    firefox \
    ie6 \
    ie7 \
    ie8 \
    mpc \
    vlc \
    allfonts \
    glsl-disable \
    glsl-enable \
    native_mdac \
    native_oleaut32 \
    nocrashdialog \
    orm=backbuffer \
    orm=fbo \
    orm=pbuffer \
    sandbox \
    sound=alsa \
    sound=audioio \
    sound=coreaudio \
    sound=esound \
    sound=jack \
    sound=nas \
    sound=oss \
    winver=nt40 \
    winver=win98 \
    winver=win2k \
    winver=winxp \
    winver=vista \
    winver= \
    version \
    volnum

do
    wineserver -k || true
    rm -rf $WINEPREFIX
    sh winetricks  -q -v $verb
done

# Test dotnet/etc. a bit more extensively:
if [ ! -x "`which gmcs`" ]
then
    echo "gmcs not found, please install it to test dotnet/mono"
    echo "e.g., sudo apt-get install mono-gmcs"
else
    cat > dotnet_test.c << __EOF__
using System; class ExampleClass { static void Main(){Console.WriteLine("Dotnet works!");} }
__EOF__
    gmcs dotnet_test.c

    for verb in \
        dotnet20 \
        mono26
    do
        wineserver -k || true
        rm -rf $WINEPREFIX
        sh winetricks  -q -v $verb
        wine dotnet_test.exe | grep "Dotnet works!"
    done
    rm dotnet_test.c dotnet_test.exe
fi

# Known to have problems

if [ "$1" = "--all" ]
then
    # Ignores -q
    for verb in \
        allcodecs \
        cmake \
        cygwin \
        dirac \
        directx9 \
        divx \
        dotnet11sdk \
        dotnet20sdk \
        dxsdk_nov2006 \
        kde \
        ole2 \
        psdk2003 \
        psdkwin7 \
        python26 \
        python-comtypes \
        vc2005sp1 \
        vc2005trial
    do
        wineserver -k || true
        rm -rf $WINEPREFIX
        sh winetricks -v $verb
    done
fi

# Broken
#    controlpad #Broken on 64-bit karmic
#    dotnet20sp2
#    dotnet30
#    dxsdk_nov2006 (silent install is broken)
#    fm20
#    psdkvista
#    vc2005express
#    vc2005expresssp1

exit 0
